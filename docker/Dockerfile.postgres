# Use official PostgreSQL image as base
FROM postgres:15-alpine

# Set environment variables
ENV POSTGRES_DB=inventory_management
ENV POSTGRES_USER=inventory_user
ENV POSTGRES_PASSWORD=inventory_pass

# Copy initialization scripts
COPY ../database/migrations/ /docker-entrypoint-initdb.d/

# Expose port
EXPOSE 5432

# Health check
HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
  CMD pg_isready -U inventory_user -d inventory_management || exit 1 